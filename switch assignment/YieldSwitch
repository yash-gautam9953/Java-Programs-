public class YieldSwitch{
    public static void main(String[] args) {
        int day = 3;
        
        String dayName = switch (day) {
            case 1 -> "Monday";
            case 2 -> "Tuesday";
            case 3 -> {
                System.out.println("Processing Wednesday...");
                yield "Wednesday"; // `yield` returns a value
            }
            default -> "Invalid day";
        };

        System.out.println(dayName);
    }
}
